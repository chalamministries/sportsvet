<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".activity.DemoActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.fini.pro.sportsvet.utils.dialView.DialView
            android:id="@+id/dial_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_200sdp"
            android:layout_centerHorizontal="true"
            app:centerPadding="120"
            app:dialDirection="BOTTOM"
            app:endColor="@color/transparent"
            app:intervalValueOnLine="true"
            app:leastCount="1"
            app:lineInterval="5"
            app:maxValue="100"
            app:minValue="0"
            app:paintArcColor="@color/purple1"
            app:paintLineColor="@color/purple1"
            app:paintTextColor="@color/purple1"
            app:startColor="@color/transparent"
            app:textSize="30"
            app:tickGapAngle="1.8" />

        <TextView
            android:id="@+id/tv_value"
            android:layout_below="@id/dial_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:gravity="center"
            android:textColor="@color/purple1"
            android:textSize="@dimen/_14sdp"
            android:textStyle="bold"
            android:text="100"
            android:visibility="visible"/>

    </RelativeLayout>

</LinearLayout>